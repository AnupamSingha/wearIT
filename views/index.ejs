<%- include('./partials/header') %>

<% if (error.length > 0) { %>
<div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-red-500">
    <span class="inline-block mt-1 mb-1 text-white">
        <%= error %>
    </span>
</div>
<% } %>

<div class="w-full min-h-screen flex flex-col lg:flex-row px-5 lg:px-20 py-10 gap-10">
    <!-- Register Section -->
    <div class="w-full lg:w-1/2 flex items-center justify-center">
        <div class="w-full max-w-md px-5">
            <h3 class="text-3xl lg:text-4xl font-bold mb-3">
                Welcome to <span class="text-blue-500">wearIT</span>
            </h3>
            <h4 class="text-xl lg:text-2xl mb-5">Create your account</h4>
            <form autocomplete="off" action="/users/register" method="post">
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border border-zinc-300 rounded-md mb-3 focus:ring-2 focus:ring-blue-400"
                    type="text" placeholder="Full Name" name="fullname" required>
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border border-zinc-300 rounded-md mb-3 focus:ring-2 focus:ring-blue-400"
                    type="email" placeholder="Email" name="email" required>
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border border-zinc-300 rounded-md mb-3 focus:ring-2 focus:ring-blue-400"
                    type="password" placeholder="Password" name="password" required>
                <input
                    class="block w-full py-3 mt-4 bg-blue-500 text-white rounded-full font-semibold hover:bg-blue-600 transition"
                    type="submit" value="Create My Account">
            </form>
        </div>
    </div>

    <!-- Login Section -->
    <div class="w-full lg:w-1/2 flex items-center justify-center">
        <div class="w-full max-w-md px-5">
            <h4 class="text-xl lg:text-2xl mb-5 capitalize font-semibold">Login to your account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border border-zinc-300 rounded-md mb-3 focus:ring-2 focus:ring-blue-400"
                    type="email" placeholder="Email" name="email" required>
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border border-zinc-300 rounded-md mb-3 focus:ring-2 focus:ring-blue-400"
                    type="password" placeholder="Password" name="password" required>
                <input
                    class="block w-full py-3 mt-4 bg-blue-500 text-white rounded-full font-semibold hover:bg-blue-600 transition"
                    type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
