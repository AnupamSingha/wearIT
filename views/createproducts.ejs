<%- include('./partials/header') %>
<% if(success.length > 0) { %>
<div class="absolute top-5 left-1/2 transform -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
    <span class="inline-block mt-1 mb-1 text-white">
        <%= success %>
    </span>
</div>
<% } %>

<div class="min-h-screen flex flex-col">
    <div class="container px-5 py-10 md:py-20 flex flex-col md:flex-row">
        <!-- Sidebar for Navigation -->
        <div class="w-full md:w-[25%] flex md:h-screen flex-col items-start mb-6 md:mb-0">
            <div class="flex flex-col">
                <a class="block w-fit mb-2 text-sm md:text-base" href="">All Products</a>
                <a class="block w-fit mb-2 text-sm md:text-base" href="">Create New Product</a>
            </div>
        </div>

        <!-- Main Content -->
        <main class="w-full md:w-3/4 bg-white p-6 md:p-8 shadow md:ml-4">
            <h2 class="text-lg md:text-xl font-bold mb-4">Create New Product</h2>
            <form autocomplete="off" action="/products/create" method="POST" enctype="multipart/form-data">
                <div class="mb-6">
                    <h3 class="text-base md:text-lg font-semibold mb-2">Product Details</h3>
                    <div class="mb-4">
                        <label class="block mb-2 text-sm md:text-base font-medium">Product Image</label>
                        <input name="image" type="file" class="py-2 px-4 rounded w-full">
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <input name="name" type="text" placeholder="Product Name" class="border p-2 rounded w-full">
                        <input name="price" type="text" placeholder="Product Price" class="border p-2 rounded w-full">
                        <input name="discount" type="text" placeholder="Discount Price" class="border p-2 rounded w-full">
                    </div>
                </div>

                <div>
                    <h3 class="text-base md:text-lg font-semibold mb-2">Panel Details</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <input name="bgcolor" type="text" placeholder="Background Color" class="border p-2 rounded w-full">
                        <input name="panelcolor" type="text" placeholder="Panel Color" class="border p-2 rounded w-full">
                        <input name="textcolor" type="text" placeholder="Text Color" class="border p-2 rounded w-full">
                    </div>
                </div>
                <input class="w-full md:w-auto px-5 py-2 rounded mt-3 bg-blue-500 text-white text-sm md:text-base" type="submit" value="Create New Product">
            </form>
        </main>
    </div>
</div>
<%- include('./partials/footer') %>
